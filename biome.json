{
    "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "indentStyle": "space",
            "indentWidth": 2
        }
    },
    "json": {
        "formatter": {
            "enabled": true,
            "indentWidth": 2,
            "indentStyle": "space"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "noNonNullAssertion": "off",
                "noUselessElse": "off"
            },
            "suspicious": {
                "noExtraNonNullAssertion": "off",
                "noExplicitAny": "off"
            },
            "a11y": {
                "useMediaCaption": "off"
            },
            "correctness": {
                "useJsxKeyInIterable": "off"
            }
        }
    }
}